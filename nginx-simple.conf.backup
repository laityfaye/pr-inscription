# Configuration Nginx SIMPLIFIÉE pour préinscription.sbcgroupe.ca
# Backend: Laravel 11 (API)
# Frontend: React SPA (Vite)

server {
    listen 80;
    server_name preinscription.sbcgroupe.ca;
    
    # Logs
    access_log /var/log/nginx/preinscription-access.log;
    error_log /var/log/nginx/preinscription-error.log;

    # Taille maximale des uploads
    client_max_body_size 20M;

    # Root pour le frontend
    root /home/deploy/pr-inscription/frontend/dist;
    index index.html;

    # Headers de sécurité
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Storage Laravel - fichiers uploadés
    location /storage {
        alias /home/deploy/pr-inscription/backend/storage/app/public;
        expires 7d;
        access_log off;
    }

    # Backend Laravel API - Configuration simplifiée
    location /api {
        # Réécrire toutes les requêtes /api/* vers le backend Laravel
        rewrite ^/api/(.*)$ /api/index.php?$query_string last;
    }

    # Point d'entrée Laravel pour toutes les requêtes /api/*
    location ~ ^/api/index\.php {
        root /home/deploy/pr-inscription/backend/public;
        
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        fastcgi_param SCRIPT_FILENAME /home/deploy/pr-inscription/backend/public/index.php;
        fastcgi_param REQUEST_URI $request_uri;
        include fastcgi_params;
        
        # CORS headers
        add_header Access-Control-Allow-Origin $http_origin always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept" always;
        add_header Access-Control-Allow-Credentials "true" always;
        
        fastcgi_read_timeout 300;
    }

    # Frontend React SPA
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Sécurité - bloquer fichiers cachés
    location ~ /\. {
        deny all;
    }
}

